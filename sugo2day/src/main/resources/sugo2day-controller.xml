<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc.xsd">
		
	<!-- Controller 구현 없이 View Page Mapping -->
	<mvc:view-controller path="/main" view-name="defaultPage" />
	<mvc:view-controller path="/login/**" view-name="login" />

	<!-- Bootstrap 사용을 위한 경로 Mapping -->	
	<mvc:resources location="/resources/**" mapping="/resources/" />
	
	<!-- Intercepter 설정 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<!-- 로그인이 안되면 볼 수 없는 것들 -->
			<mvc:mapping path="/board/**" />
			
			<!-- 그 중에서도 예외로 볼 수 있는 것들 -->
			<mvc:exclude-mapping path="/board/boardList" />
			<mvc:exclude-mapping path="/board/boardDetail/**" />
			<bean class="intercepter.AuthCheckInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>
	
	
	<!-- 아래에 Controller Class Bean 등록 -->
	
	<!-- Member 관련 Controller -->
	<bean class="controller.RegisterController">
		<property name="memberRegisterService" ref="memberRegSvc" />
	</bean>
	
	<bean class="controller.LoginController">
		<property name="authService" ref="authService" />
	</bean>
	
	<bean class="controller.LogoutController" />
	
	<bean class="controller.ChangePwdController">
		<property name="changePasswordService" ref="changePwdSvc" />
	</bean>
	
	<!-- Board 관련 Controller -->
	
	<bean class="controller.BoardListController">
		<property name="boardDao" ref="boardDao" />
	</bean>
	
	<bean class="controller.BoardWriteController">
		<property name="boardDao" ref="boardDao" />
	</bean>
	
	<bean class="controller.BoardDetailController">
		<property name="boardDao" ref="boardDao" />
	</bean>
	
	<bean class="controller.BoardDeleteController">
		<property name="boardWriterCheck" ref="boardWriterCheck" />
	</bean>
	
	<bean class="controller.BoardModifyController">
		<property name="boardWriterCheck" ref="boardWriterCheck" />
		<property name="boardDao" ref="boardDao" />
	</bean>
	
	<bean class="controller.BoardReplyController">
		<property name="boardDao" ref="boardDao" />
	</bean>
	
	<!-- Quest 관련 Controller -->
	
	<bean class="controller.BoardQuestController">
		<property name="questDao" ref="questDao" />
	</bean>
	
</beans>	
	